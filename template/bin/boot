#!/bin/bash
APP_NAME=__APP_NAME__
cd /$APP_NAME
echo "STARTING $APP_NAME ON: $APP_ENV"

bundle check || bundle install

# Database migration
production() {
  # run sneakers in production
  echo .
}

development() {
  cd /$APP_NAME
  bundle install
  while true; do
    ruby config/application.rb
    echo -e "\nReloading Cthulhu..."
  done

}

staging () {
  production
}

test () {
  # run tests
  echo .
}

# calls the right function
`echo $APP_ENV`
